CREATE TABLE IF NOT EXISTS `Documentos` (
  `cod` int(11) NOT NULL AUTO_INCREMENT,
  `Título` varchar(50) NOT NULL,
  `Autor` double NOT NULL,
  PRIMARY KEY (`cod`)
) ENGINE=MyISAM  DEFAULT CHARSET=latin1 AUTO_INCREMENT=6 ;
